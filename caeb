<script>
  // ‚úÖ CAMBIA AQU√ç TU WHATSAPP (formato: pa√≠s+lada+n√∫mero, sin +, sin espacios)
  const WHATS = "5219999999999";

  document.getElementById("y").textContent = new Date().getFullYear();

  function waLink(text){
    return `https://wa.me/${WHATS}?text=${encodeURIComponent(text)}`;
  }

  function quickBuy(producto, precio){
    const msg = `Hola, quiero comprar: ${producto} (${precio}).\n\n- Color:\n- Talla:\n- Cantidad:\n- Ciudad/Env√≠o:\n\n¬øMe confirmas disponibilidad y costo de env√≠o?`;
    window.open(waLink(msg), "_blank");
  }

  function sendConfig(){
    const modelo = document.getElementById("modelo").value;
    const color = document.getElementById("color").value;
